pipeline
{
    agent any
    environment
    {
        // Path = "/usr/local/bin/minikube:${PATH}"
        // registry = "akhiltavva/"
        registryCredential = "DockerHubCred"
        dockerImage = ""
    }
    stages
    {
        stage('Clone Git'){
            steps{
                git branch: 'master',
                url:'https://github.com/Akhil-Tavva/SPE-Final-Project.git'
            }
        }
        stage('Build Frontend Image'){
            steps
            {
                dir("frontend/")
                {
                    // sh "npm install"
                    // sh "npm run build"
                    sh "docker build -t akhiltavva/frontend:latest ."
                }
            }
        }
        stage('Frontend DockerHub Image Push')
        {
            steps
            {
                script
                {
                    docker.withRegistry('', registryCredential)
                    {
                        sh "docker push akhiltavva/frontend:latest"
                    }
                }
            }
        }
        stage('Build Backend Image'){
            steps
            {
                dir("backend/")
                {
                    sh "mvn clean install"
                    sh "docker build -t akhiltavva/backend:latest ."
                }
            }
        }
        stage('Backend DockerHub Image Push')
        {
            steps
            {
                script
                {
                    docker.withRegistry('', registryCredential)
                    {
                        sh "docker push akhiltavva/backend:latest"
                    }
                }
            }
        }
        // stage('Ansible Deployment'){
        //     steps{
        //         script{
        //             sh 'ansible-playbook -i inventory deploy.yml'
        //         }
        //     }
        // }
        // stage('Debugging') {
        //     steps {
        //         script {
        //             echo "Current Directory: ${pwd()}"
        //             echo "Workspace: ${env.WORKSPACE}"
        //             echo "Contents of Deployment directory:"
        //             sh 'ls -l /home/akhil/Desktop/Sem-7/Software Production Enginerring/SPE-Final-Project/'
        //         }
        //     }
        // }

        stage('Ansible Deployment') {
            steps{
                ansiblePlaybook becomeUser: null,
                colorized: true,
                credentialsId: 'localhost-1',
                disableHostKeyChecking: true,
                installation: 'Ansible',
                inventory: 'inventory',
                playbook: 'playbook.yml',
                sudoUser: null
            }
            // steps{
            //     ansiblePlaybook colorized: true, credentialsId: 'localhost', disableHostKeyChecking: true, installation: 'Ansible', inventory: 'inventory', playbook: 'playbook.yml', sudoUser: null
            // }
        }
    }
}
